{
  "name": "graphql-code-generator",
  "private": true,
  "scripts": {
    "postinstall": "patch-package && husky install",
    "clean": "rimraf node_modules/",
    "prebuild": "rimraf dist/ .bob/ tsconfig.tsbuildinfo",
    "build": "bob build",
    "watch-build": "npx tsc-watch --project tsconfig.json --onSuccess \"bob build\"",
    "test": "jest --forceExit --no-watchman",
    "lint": "eslint --ext .ts .",
    "prettier": "prettier --write --list-different .",
    "prettier:check": "prettier --check .",
    "types:check": "tsc --noEmit",
    "test-and-build": "yarn build && yarn test",
    "ci:lint": "eslint --ext .ts . --output-file eslint_report.json --format json",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "generate:examples:esm": "graphql-codegen-esm --require dotenv/config --config ./dev-test/codegen.ts dotenv_config_path=dev-test/.env",
    "generate:examples:cjs": "graphql-codegen --require dotenv/config --config ./dev-test/codegen.ts dotenv_config_path=dev-test/.env",
    "generate:examples": "yarn generate:examples:cjs"
  },
  "workspaces": [
    "packages/*",
    "packages/plugins/flow/*",
    "packages/plugins/java/*",
    "packages/plugins/c-sharp/*",
    "packages/plugins/dart/*",
    "packages/plugins/typescript/*",
    "packages/plugins/other/*",
    "packages/presets/*"
  ],
  "devDependencies": {
    "@apollo/client": "3.7.5",
    "@babel/core": "7.20.12",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-typescript": "7.18.6",
    "@changesets/cli": "2.26.0",
    "@changesets/changelog-github": "0.4.8",
    "@graphql-typed-document-node/core": "3.1.1",
    "@reduxjs/toolkit": "1.9.2",
    "@tanstack/react-query": "4.24.6",
    "@theguild/prettier-config": "0.1.1",
    "@types/common-tags": "1.8.1",
    "@types/jest": "28.1.8",
    "@types/mkdirp": "1.0.2",
    "@types/node": "18.13.0",
    "@types/react": "18.0.27",
    "@types/webpack-env": "1.18.0",
    "@typescript-eslint/eslint-plugin": "5.51.0",
    "@typescript-eslint/parser": "5.51.0",
    "@urql/exchange-graphcache": "5.0.8",
    "@vue/apollo-composable": "4.0.0-beta.2",
    "@vue/composition-api": "1.7.1",
    "apollo-client": "2.6.10",
    "apollo-server": "3.11.1",
    "auto-bind": "4.0.0",
    "babel-jest": "28.1.3",
    "bob-the-bundler": "4.0.0",
    "chalk": "4.1.2",
    "dotenv": "16.0.3",
    "eslint": "8.34.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-n": "15.2.5",
    "eslint-plugin-promise": "6.0.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "flow-bin": "0.199.1",
    "flow-parser": "0.186.0",
    "fs-extra": "10.1.0",
    "globby": "13.1.3",
    "graphql": "16.6.0",
    "graphql-tag": "2.12.6",
    "husky": "8.0.3",
    "java-ast": "0.3.0",
    "jest": "28.1.3",
    "jest-docblock": "28.1.1",
    "jest-junit": "15.0.0",
    "lint-staged": "13.1.1",
    "lodash": "4.17.21",
    "patch-package": "6.5.1",
    "prettier": "2.8.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rimraf": "3.0.2",
    "stencil-apollo": "0.1.6",
    "svelte": "3.50.0",
    "ts-jest": "28.0.8",
    "ts-node": "10.9.1",
    "tslib": "2.4.1",
    "typescript": "4.7.4",
    "urql": "3.0.3",
    "vue": "3.2.47",
    "vue-apollo-smart-ops": "0.1.0"
  },
  "lint-staged": {
    "packages/**/src/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{js,jsx,cjs,mjs,ts,tsx,graphql,gql,yml,yaml,json,md}": [
      "prettier --write"
    ],
    "yarn.lock": [
      "npx yarn-deduplicate"
    ]
  },
  "resolutions": {
    "prettier": "2.8.3",
    "babel-jest": "28.1.3",
    "jest-runner": "28.1.3",
    "graphql": "16.6.0",
    "graphql-language-service-interface": "2.10.2",
    "**/apollo-language-server/graphql": "^16.0.0",
    "**/@types/graphql-upload/graphql": "^16.0.0",
    "ts-node": "10.9.1"
  }
}
